{
	"extends": [
		"stylelint-config-standard",
		"stylelint-order-config-standard"
	],
	"plugins": [
		"stylelint-order"
	],
	"rules": {
		"indentation": [
			"tab"
		],
		"at-rule-no-unknown": [
			true,
			{
			  "ignoreAtRules": [
				"tailwind",
				"apply",
				"variants",
				"responsive",
				"screen"
			  ]
			}
		],
		"declaration-block-trailing-semicolon": null,
		"no-descending-specificity": null,
		
		"color-hex-case": "upper"
	}
}